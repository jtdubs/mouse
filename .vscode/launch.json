{
  "configurations": [
    {
      "name": "Debug Firmware",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bazel-out/k8-dbg/bin/firmware/mouse",
      "cwd": "${workspaceFolder}/sim",
      "externalConsole": false,
      "stopAtEntry": true,
      "stopAtConnect": true,
      "MIMode": "gdb",
      "miDebuggerPath": "/opt/avr-toolchain/bin/avr-gdb",
      "miDebuggerServerAddress": "localhost:1234",
      "serverLaunchTimeout": 4000,
      "preLaunchTask": "Run Simulator (gdb)",
    },
    {
      "name": "Debug Simulator",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bazel-out/k8-dbg/bin/tools/sim/sim",
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "stopAtEntry": true,
      "stopAtConnect": true,
      "MIMode": "gdb",
      "args": [
        "--firmware",
        "${workspaceFolder}/bazel-out/k8-dbg/bin/firmware/mouse",
      ],
      "preLaunchTask": "Build Simulator (dbg)",
    },
    {
      "name": "Debug Remote",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bazel-out/k8-dbg/bin/tools/remote/remote",
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "stopAtEntry": true,
      "stopAtConnect": true,
      "MIMode": "gdb",
      "args": [
        "--port",
        "/tmp/simavr-uart0",
      ],
      "preLaunchTask": "Build Remote (dbg)",
    },
  ]
}
