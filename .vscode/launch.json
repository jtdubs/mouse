{
  "configurations": [
    {
      "name": "Debug Firmware",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/fw/build/debug/mouse.elf",
      "cwd": "${workspaceFolder}/sim",
      "externalConsole": false,
      "stopAtEntry": true,
      "stopAtConnect": true,
      "MIMode": "gdb",
      "miDebuggerPath": "/opt/avr-toolchain/bin/avr-gdb",
      "miDebuggerServerAddress": "localhost:1234",
      "serverLaunchTimeout": 4000,
      "preLaunchTask": "Run Simulator",
      "postDebugTask": "Kill Simulator"
    },
    {
      "name": "Debug Sim",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bazel-bin/tools/sim/sim",
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "stopAtEntry": true,
      "stopAtConnect": true,
      "MIMode": "gdb",
      "args": [
        "--firmware",
        "${workspaceFolder}/bazel-out/k8-dbg/bin/firmware/mouse",
      ],
    },
    {
      "name": "Debug Remote",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bazel-bin/tools/remote2/remote2",
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "stopAtEntry": true,
      "stopAtConnect": true,
      "MIMode": "gdb",
      "args": [
        "--port",
        "/tmp/simavr-uart0",
      ],
    },
  ]
}
